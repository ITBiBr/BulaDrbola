<div class="col-xl-3 col-lg-4 col-md-6 col-12 mb-5">
    <a href="{{ path('akce_url', { url: akce.url }) }}" class="text-decoration-none text-dark">
        <div class="card h-100 rounded-0 border-0">

            <div class="position-relative">
                <img
                        src="{{ asset('/images/aktuality/' ~ akce.Obrazek) | imagine_filter('aktualita_thumb') }}"
                        class="card-img-top rounded-0"
                        alt="Náhledový obrázek"
                >

                <span class="akce-datum">
                    {{ akce.Datum|date('j. n.') }}
                    {% if akce.DatumDo %} - {{ akce.DatumDo|date('j. n.') }}{% endif %}
                </span>
            </div>

            <div class="card-body p-2 text-left">
                <h6 class="card-title fw-medium mb-1">
                    {{ akce.Titulek }}
                </h6>

                {% if akce.MistoKonani %}
                    <small class="card-text mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="1em"
                             height="1em"
                             viewBox="0 0 24 24"
                             stroke="rgba(33, 7, 104, 1)"
                             fill="none"
                             style="vertical-align: -0.05em;">
                            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5A2.5 2.5 0 1 1 12 6a2.5 2.5 0 0 1 0 5.5z"/>
                        </svg>
                        {{ akce.MistoKonani }}
                    </small>
                {% endif %}
            </div>

        </div>
    </a>
</div>
