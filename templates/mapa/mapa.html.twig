<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""/>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""></script>
<div class="row justify-content-center mt-4">
    <div class="col-xl-6 col-lg-9 col-10">
        <div id="map"></div>
    </div>
</div>
<script>
    var map = L.map('map').setView([{{ lat }}, {{ lng }}], 13);
    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);
    var pinIcon = L.divIcon({
        className: 'map-pin',
        html: `<svg viewBox="-20 -25 40 55"
                    xmlns="http://www.w3.org/2000/svg">
                    <g>
                        <path d="M0,-20 C-10,-20 -15,-10 -15,0 C-15,10 0,25 0,25 C0,25 15,10 15,0 C15,-10 10,-20 0,-20Z"
                              fill="rgb(222, 174, 107)"
                              stroke="#FFFFFF"
                              stroke-width="0.4"/>
                        <circle cx="0" cy="-5" r="4" fill="white"/>
                    </g>
                </svg>`,
        iconSize:     [40, 55],  // velikost ikony (šířka, výška)
        iconAnchor:   [20, 55],  // bod ikony, který bude přesně na souřadnici
        popupAnchor:  [0, -45]   // kde se otevře popup vůči iconAnchor
    });

</script>