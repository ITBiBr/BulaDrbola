                    <div class="modal-body">
                        {% if point.pribehMista %}
                            <p>Příběh místa:<br>{{ point.pribehMista|raw }}</p>
                        {% endif %}
                        {% if point.zajimavosti %}
                            <p>Zajímavosti:<br>{{ point.zajimavosti|raw }}</p>
                        {% endif %}
                        <hr>
                        <small class="text-muted">
                            N {{ point.lat }},
                            E {{ point.lng}}
                        </small>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
