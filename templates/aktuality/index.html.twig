                        <div class="card-body">
                            <h5 class="card-title mt-2 text-primary fw-bold">Barevná aktualita</h5>
                            <p class="card-text mb-0">Zde je použita barevná fotografie</p>
                            <a href="#" class="fw-bold">Číst více</a>
                        </div>
                    </div>
                </div>-->
                {% for aktualita in aktuality %}
                    {% include 'aktuality/_aktualita.html.twig' with {'aktualita': aktualita} %}
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="container-fluid text-center">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-11">
                <button id="load-more-btn" data-offset="{{ aktuality|length }}" class="btn btn-outline-primary rounded-pill m-5"><div class="mx-3">Načíst další</div></button>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('load-more-btn').addEventListener('click', function () {
            const btn = this;
            const offset = btn.dataset.offset;

            fetch('/aktuality/load-more?offset=' + offset)
                .then(response => response.json())
                .then(data => {
                    const container = document.getElementById('aktuality-container');
                    data.items.forEach(itemHtml => {
                        const div = document.createElement('div');
                        div.innerHTML = itemHtml.trim();
                        const newItem = div.firstElementChild;

                        if (newItem) {
                            // přidej třídu fade-in
                            newItem.classList.add('fade-in');
                            container.appendChild(newItem);

                            // malý timeout, aby se spustil transition efekt
                            setTimeout(() => {
                                newItem.classList.add('show');
                            }, 10);
                        }
                    });
                    if (data.hasMore) {
                        btn.dataset.offset = data.nextOffset;
                    } else {
                        btn.remove(); // skryje tlačítko, pokud už není co načíst
                    }
                });
        });
    </script>


</div>
{% endblock %}
