            <h1 class="text-primary fw-bold text-uppercase">Aktuality</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10 col-md-12 col-12">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 px-lg-5 py-lg-3" id="aktuality-container">

                <!-- Aktualita 7
                <div class="col">
                    <div class="card h-100 border-0 rounded-0">
                        <div class="card-header bg-white border-0 pb-0">
                            <small class="text-muted">5. srpna 2025</small>
                        </div>
                        <div class="px-3">
                        <div class="image-overlay">
                            <img src="{{ asset('images/aktuality/07.jpg') }}" class="card-img-top card-img-top-filter rounded-0" alt="Náhledový obrázek">
                        </div>
