{% extends 'base.html.twig' %}

{% block title %}{{ clanek.Titulek }}{% endblock %}

{% block body %}
    <div class = "container-fluid pt-5 mt-3">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8 col-11 p-3">
                <h1 class="text-primary fw-bold text-uppercase">{{ clanek.Titulek }}</h1>
            </div>
        </div>
        {% if clanek.Obrazek %}
        <div class="row justify-content-center mt-4">
            <div class="col-lg-8 col-11 text-justify-center">
                <img class="w-75" src="{{ asset('/images/clanky/' ~ clanek.Obrazek) | imagine_filter('aktualita_full_thumb') }}" alt="{{ clanek.Titulek }}">
            </div>
        </div>
        {% endif %}
        <div class="row justify-content-center mt-5">
            <div class="col-lg-8 col-11 text-justify-left">
                {{ clanek.Obsah|raw }}
            </div>
        </div>


    </div>
{% endblock %}
