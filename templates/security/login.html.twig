{# extends 'base.html.twig' #}

{% block title %}Přihlášení{% endblock %}

{% block body %}
<div class="container-fluid">
    <form method="post">

        <div class="row justify-content-center mb-5">
            <div class="col-lg-11 col-12">
                <div class="row justify-content-center text-center">
                    <div class="col-xl-6 col-lg-9 col-10 p-3">
                        <h1 class="text-primary fw-bolder text-uppercase">Přihlášení</h1>
                    </div>
                </div>


                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="row mb-3">
                        <div class="col-lg-2 col-sm-4 col-8">
                            Přihlášený uživatel: {{ app.user.userIdentifier }}
                        </div>
                        <div class="col-2">
                            <a href="{{ path('app_logout') }}">Odhlásit</a>
                        </div>
                    </div>
                {% endif %}
                <div class="col-lg-2 col-sm-7 col-11">
                <label for="inputUsername">Uživatelské jméno</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                <label for="inputPassword">Heslo</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Zapamatovat přihlášení
                    </label>
                </div>

                    <button class="btn btn-sm btn-outline-primary rounded-pill mt-3 px-4 border-2" type="submit">
                        Přihlásit se
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
