{% extends 'base.html.twig' %}

{% block title %}Materiály{% endblock %}

{% block body %}
<div class = "container pt-5 mt-3">
    <div class="row text-center">
        <div class="col-12 p-3">
            <h1 class="text-primary fw-bold text-uppercase">Materiály</h1>

        </div>
        <div class="row justify-content-center">
            <div class = "col-8">
                <p class="text-justify-center">Zde bude text, který upřesní, jakým způsobem a jaké materiály je zde možné vyhledat.</p>
            </div>
        </div>
    </div>


    <nav>
        <div class="nav nav-tabs materialy justify-content-center mt-5" id="nav-tab" role="tablist">
            <button class="nav-link active fw-bold" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Home</button>
            <button class="nav-link fw-bold" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Profile</button>
            <button class="nav-link fw-bold" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">Contact</button>
        </div>
    </nav>
    <div class="row justify-content-center">
        <div class = "col-8 mt-4">
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <div class="card shadow-sm mb-4 rounded-0 border-primary border-2">
                        <div class="card-body">
                            <div class="row">
                                <!-- Levý sloupec -->
                                <div class="col-md-2">
                                    <svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                        <!-- Obrys souboru -->
                                        <polyline
                                                points="47,7 47,22 62,22 47,7 17,7 17,72 62,72 62,22"
                                                style="fill:white;stroke:rgba(33, 7, 104, 1);stroke-width:2"
                                                stroke-linejoin="round"
                                        />

                                        <!-- Rámeček vlevo nahoře -->
                                        <polygon
                                                points="39,24 6,24 6,41 39,41"
                                                style="fill:white;stroke:rgba(33, 7, 104, 1);stroke-width:2"
                                                stroke-linejoin="round"
                                        />

                                        <!-- Tučný text typu souboru -->
                                        <text
                                                x="22"
                                                y="33"
                                                text-anchor="middle"
                                                font-size="10"
                                                font-family="Arial, sans-serif"
                                                font-weight="bold"
                                                fill="rgba(33, 7, 104, 1)"
                                                dominant-baseline="middle"
                                        >
                                            PDF
                                        </text>
                                    </svg>

                                </div>
                                <!-- Střední sloupec -->
                                <div class="col-md-7">
                                    <h5 class="card-title">Název souboru</h5>
                                    <p class="card-text">Zde bude nějaký dlouhosáhlý popis toho, co se v souboru nachází.</p>

                                </div>
                                <!-- Pravý sloupec -->
                                <div class="col-md-3">
                                    <button class="btn btn-outline-primary rounded-pill"><div class="mx-2">Stáhnout</div></button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">2</div>
                <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">3</div>
            </div>
        </div>
    </div>

</div>
    {% include 'paticka.html.twig' %}
{% endblock %}
